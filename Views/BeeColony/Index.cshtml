@model List<BeeColony>
@{
    ViewData["Title"] = "Пчелиные семьи";
    var beeColonies = Model ?? new List<BeeColony>();
    var lastInspections = ViewBag.LastInspections as Dictionary<int, Inspection> ?? new Dictionary<int, Inspection>();
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/bee-colony.css">
</head>
<body>
    <div class="myContainer">
        <div class="header">
            <h1>Пчелиные семьи</h1>

            <div class="header-actions">
                <div class="header-stats">
                    <span class="stat-item">
                        <p>Всего семей: <b>@beeColonies.Count</b></p>
                    </span>
                </div>
            </div>
        </div>

        <div class="bee-colonies-grid">
            @foreach (var colony in beeColonies)
            {
                var isDisbanded = colony.DisbandmentDate != null;
                var lastInspection = lastInspections.ContainsKey(colony.Id) ? lastInspections[colony.Id] : null;

                <div class="bee-colony-card @(isDisbanded ? "disbanded" : "")">
                    <!-- Статус -->
                    <span class="status-badge @(isDisbanded ? "disbanded" : "active")">
                        @(isDisbanded ? "Завершена" : "Активна")
                    </span>

                    <!-- Заголовок -->
                    <div class="bee-colony-header">
                        <div class="bee-colony-number">
                            Семья @colony.Number
                        </div>
                    </div>

                    <!-- Основная информация -->
                    <div class="bee-colony-info">
                        <div class="info-line">
                            <span class="info-label">Дата создания:</span>
                            <span class="info-value date">
                                @colony.CreationDate.ToString("dd.MM.yyyy")
                            </span>
                        </div>

                        @if (isDisbanded)
                        {
                            <div class="info-line">
                                <span class="info-label">Завершена:</span>
                                <span class="info-value disbanded-date">
                                    @colony.DisbandmentDate.Value.ToString("dd.MM.yyyy")
                                </span>
                            </div>
                        }
                    </div>

                    <!-- Сводка из последнего осмотра -->
                    @if (lastInspection != null)
                    {
                        <div class="colony-summary"
                             style="@(isDisbanded ? "background: #f5f5f5; border-left: 4px solid #9e9e9e;" : "")">

                            <div class="summary-header">
                                <div class="summary-title">Последний осмотр</div>
                                <div class="summary-date">@lastInspection.DateTime.ToString("dd.MM.yyyy")</div>
                            </div>

                            <div class="summary-stats">
                                <div class="summary-stat">
                                    <span class="stat-label">Сила семьи</span>
                                    <span class="stat-value strength">@lastInspection.StrengthInFrames рам.</span>
                                </div>
                                <div class="summary-stat">
                                    <span class="stat-label">Всего рамок</span>
                                    <span class="stat-value total">@lastInspection.TotalFrames</span>
                                </div>
                                <div class="summary-stat">
                                    <span class="stat-label">Расплод</span>
                                    <span class="stat-value brood">@lastInspection.BroodFrames рам.</span>
                                </div>
                                <div class="summary-stat">
                                    <span class="stat-label">Корм</span>
                                    <span class="stat-value food">@lastInspection.FoodAmountKg кг</span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(lastInspection.Notes))
                            {
                                <div class="colony-notes">
                                    <div class="notes-label">Примечания:</div>
                                    @lastInspection.Notes
                                </div>
                            }
                        </div>
                    }

                    <!-- Кнопка внизу -->
                    <div class="bee-colony-footer">
                        <a asp-controller="Inspection" asp-action="Index" asp-route-beeColonyId="@colony.Id"
                           class="btn-inspections">
                            @(isDisbanded ? "История осмотров" : "Осмотры")
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>