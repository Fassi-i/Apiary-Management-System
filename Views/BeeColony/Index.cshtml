@model List<BeeColony>
@{
    ViewData["Title"] = "Пчелиные семьи";
    var beeColonies = Model ?? new List<BeeColony>();
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/bee-colony.css">
</head>
<body>
    <div class="myContainer">
        <div class="header">
            <h1>Пчелиные семьи</h1>
            <div class="header-stats">
                <span class="stat-item">
                    Всего: <strong>@beeColonies.Count</strong>
                </span>
            </div>
        </div>

        <div class="bee-colonies-grid">
            @foreach (var colony in beeColonies.OrderBy(c => c.Number))
            {
                var isDisbanded = colony.DisbandmentDate != null;

                <a asp-controller="BeeColony" asp-action="Details" asp-route-id="@colony.Id"
                   class="bee-colony-card @(isDisbanded ? "disbanded" : "")"
                   title="Семья @colony.Number">
                    <div class="colony-number">
                        @colony.Number
                    </div>
                </a>
            }
        </div>
    </div>
</body>
</html>