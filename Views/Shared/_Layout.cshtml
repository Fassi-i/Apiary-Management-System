<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Система управления пасекой</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApiaryManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-area=""
                   asp-controller="Apiary"
                   asp-action="Index">
                    Система управления пасекой
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var isAdmin = User.IsInRole("Администратор");
                            var isSenior = User.IsInRole("Старший пчеловод") || isAdmin;
                            var isBeekeeper = User.IsInRole("Пчеловод");

                            if (isAdmin)
                            {
                                <!-- Админ: Пользователи, Семьи, Пасеки -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="User"
                                       asp-action="AdminIndex">
                                        Пользователи
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="BeeColony"
                                       asp-action="AdminIndex">
                                        Семьи
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Queen"
                                       asp-action="Index"> 
                                       Матки 
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Apiary"
                                       asp-action="AdminIndex">
                                        Пасеки
                                    </a>
                                </li>
                            }
                            else if (isSenior)
                            {
                                <!-- Старший пчеловод: Семьи, Пасеки, Матки -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="BeeColony"
                                       asp-action="ManageApiaries">
                                        Семьи
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Apiary"
                                       asp-action="AdminIndex">
                                        Пасеки
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Queen"
                                       asp-action="Index">
                                        Матки
                                    </a>
                                </li>
                            }
                            else if (isBeekeeper)
                            {
                                <!-- Обычный пчеловод: Семьи, Матки -->
                                @* <li class="nav-item"> *@
                                @*     <a class="nav-link text-dark" *@
                                @*        asp-controller="BeeColony" *@
                                @*        asp-action="Index"> *@
                                @*         Семьи *@
                                @*     </a> *@
                                @* </li> *@
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Queen"
                                       asp-action="Index">
                                        Матки
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Account"
                                   asp-action="Logout"
                                   class="nav-link btn btn-primary text-white">
                                    Выйти
                                </a>
                            </li>
                        }
                        @*else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account"
                                   asp-action="Login"
                                   class="nav-link btn btn-success text-white">
                                    Войти
                                </a>
                            </li>
                        }*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        @* <p>Футер</p> *@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
