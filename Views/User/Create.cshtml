@model User
@{
    ViewData["Title"] = "Добавление пользователя";
}

<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/custom-select.css">
    <link rel="stylesheet" href="~/css/custom-date.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="myContainer">
        <div class="header">
            <h1>Добавление пользователя</h1>
            <p>Заполните следующую информацию</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Create" method="post" id="beekeeperForm">
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="form-group required">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input asp-for="LastName" id="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group required">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input asp-for="FirstName" id="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label">Отчество</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group required">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input asp-for="Login" id="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="form-group required">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" type="password" id="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group required">
                <label asp-for="PositionId" class="control-label">Должность</label>
                <select asp-for="PositionId" asp-items="ViewBag.Positions" id="positionSelect" class="select-input"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const positionSelect = document.getElementById('positionSelect');

                    positionSelect.selectedIndex = -1;
                    positionSelect.value = '';

                    @if (Model != null && Model.PositionId != null)
                    {
                        <text>
                                positionSelect.value = '@Model.PositionId';
                        </text>
                    }
                });
                
            </script>

            <div class="form-group required">
                <label asp-for="BirthDate" class="control-label">Дата рождения</label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label">Место проживания</label>
                <textarea asp-for="Location" class="form-control"></textarea>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                Добавить
            </button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/custom-select.js"></script>
    <script src="~/js/custom-date.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>